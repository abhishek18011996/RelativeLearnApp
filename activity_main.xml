<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ff90ff"
    android:layout_height="match_parent"
    tools:context="com.example.monty.relativelearn.MainActivity">
    <TextView
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up!"
        android:textSize="30dp"
        android:textColor="#270014"
        android:gravity="left"
        />
    <TextView
        android:id="@+id/statement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up"
        android:text="It is always free and will always be!"
        android:textColor="#270014"
        android:layout_marginBottom="15dp"/>
    <EditText
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:paddingRight="80dp"
        android:layout_below="@+id/statement"
        android:background="#e6e6e6"
        android:layout_marginBottom="15dp"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Second Name"
       android:layout_alignParentRight="true"
        android:paddingRight="80dp"
        android:layout_alignTop="@+id/first_name"
        android:background="#e6e6e6"/>
     <EditText
         android:id="@+id/Email"
         android:layout_below="@+id/first_name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Your Email"
         android:gravity="left"
         android:textColor="#919191"
         android:paddingLeft="20dp"
         android:background="#e6e6e6"
         android:layout_marginBottom="15dp"/>
    <EditText
    android:id="@+id/ReEmail"
    android:layout_below="@+id/Email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Re-Enter Email"
    android:gravity="left"
        android:textColor="#919191"
    android:paddingLeft="20dp"
    android:background="#e6e6e6"
        android:layout_marginBottom="15dp"/>
    <EditText
        android:id="@+id/Password"
        android:layout_below="@+id/ReEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:gravity="left"
        android:textColor="#919191"
        android:paddingLeft="20dp"
        android:background="#e6e6e6"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Password"
        android:text=" Birthday:"
        android:textSize="20dp"
        android:textColor="#270014"
        android:layout_marginBottom="15dp"/>
    <EditText
        android:id="@+id/Date"
        android:layout_below="@+id/birthday"
        android:layout_width="wrap_content"
        android:paddingRight="30dp"
        android:layout_height="wrap_content"
        android:text="Date"
        android:gravity="left"
        android:textColor="#919191"
        android:paddingLeft="20dp"
        android:background="#e6e6e6"
        android:layout_marginBottom="15dp"/>
    <EditText
        android:id="@+id/Month"
        android:layout_below="@+id/birthday"
        android:layout_width="wrap_content"
        android:paddingRight="30dp"
        android:layout_height="wrap_content"
        android:text="Month"
        android:layout_toRightOf="@id/Date"
        android:gravity="left"
        android:textColor="#919191"
        android:paddingLeft="20dp"
        android:background="#e6e6e6"/>
    <EditText
        android:id="@+id/Year"
        android:layout_below="@+id/birthday"
        android:layout_width="wrap_content"
        android:paddingRight="30dp"
        android:layout_height="wrap_content"
        android:text="Year"
        android:layout_toRightOf="@id/Month"
        android:gravity="left"
        android:textColor="#919191"
        android:paddingLeft="20dp"
        android:background="#e6e6e6"/>
    <TextView
        android:id="@+id/Sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Year"
        android:text=" Sex:"
        android:textSize="20dp"
        android:textColor="#270014"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>
    <RadioButton
        android:id="@+id/maleCheck"
        android:layout_below="@+id/Sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/Male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Sex"
        android:layout_toRightOf="@+id/maleCheck"
        android:text=" Male"
        android:textSize="20dp"
        android:textColor="#270014"/>
    <RadioButton
        android:id="@+id/femaleCheck"
        android:layout_below="@+id/Sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Male"
        />
    <TextView
        android:id="@+id/Female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Sex"
        android:layout_toRightOf="@+id/femaleCheck"
        android:text=" Female"
        android:textSize="20dp"
        android:textColor="#270014"/>
    <TextView
        android:id="@+id/Terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maleCheck"
        android:text="By clicking on Sign up you agree to the terms and conditions of facebook"
        android:textSize="15dp"
        android:textColor="#270014"/>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/bt"
        android:layout_below="@id/Terms"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:background="#00b700"
        android:textColor="#e6e6e6"/>

</RelativeLayout>
